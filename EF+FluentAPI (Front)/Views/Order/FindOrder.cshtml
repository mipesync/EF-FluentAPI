@{
    ViewData["Title"] = "Найти заказ";
}

<h1>Найти заказ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Finder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Введите номер заказа или телефона</label>
                <input name="number" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <font color="#FF1827"><a style="font-size:15px;">@ViewData["ErrorMessage"]</a></font>
            <br />
            <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
