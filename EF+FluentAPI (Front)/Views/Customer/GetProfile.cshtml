@model Customer

@{
    ViewData["Title"] = "Профиль";
}

<h1>Здравствуйте, @Model.Name</h1>
<br/>
<ul>
    <a>Сортировать по:</a>
    <a asp-action="Sort" asp-controller="Order" asp-route-id="1" >Дате ↑</a>
    <a asp-action="Sort" asp-controller="Order" asp-route-id="2" >Дате ↓</a>
    <a asp-action="Sort" asp-controller="Order" asp-route-id="3" >Стоимости ↑</a>
    <a asp-action="Sort" asp-controller="Order" asp-route-id="4" >Стоимости ↓</a>
</ul>

<table class="table">
    <thead>
    <tr>
        <th>
            <a>Номер заказа</a>
        </th>
        <th>
            <a>Дата заказа</a>
        </th>
        <th>
            <a>Итоговая цена</a>
        </th>
        <th></th>
    </tr>
    </thead>
    @foreach (var order in Model.Orders!)
    {
        <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => order.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => order.TotalPrice)
            </td>
            <td>
                 <a asp-action="Details" asp-controller="Order" asp-route-name=@order.Name>Посмотреть</a>
            </td>
        </tr>
        </tbody>
    }
</table>